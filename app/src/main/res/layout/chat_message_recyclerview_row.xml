<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_full"
        android:backgroundTint="@color/blue_for_chatMessages"
        android:layout_marginEnd="80dp"
        android:id="@+id/left_chat"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:padding="8dp">
        <TextView
            android:id="@+id/left_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="hello how are you?"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/right_chat"
        android:background="@drawable/rounded_corner_full"
        android:backgroundTint="@color/green_for_chatMessage"
        android:padding="8dp">

        <TextView
            android:id="@+id/right_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="I am fine." />
    </LinearLayout>

</RelativeLayout>