<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Progile_Fragments">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp">
    <ImageButton
        android:id="@+id/profile_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/cercle"
        android:backgroundTint="@color/my_primary"
        android:src="@drawable/username_icon"
        tools:ignore="SpeakableTextPresentCheck" />
    <EditText
        android:id="@+id/profile_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/hintTextcolor"
        android:layout_margin="30dp"
        android:background="@drawable/edit_text_rounded_background"
        android:hint="Username"
        android:inputType="text"
        android:textColor="@color/black"
        android:elevation="40dp"
        android:textSize="20sp"
        android:padding="10dp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/profile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/hintTextcolor"
        android:background="@drawable/edit_text_around_2"
        android:hint="Phone"
        android:inputType="number"
        android:textColor="@color/black"
        android:elevation="40dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:enabled="false"
        tools:ignore="TouchTargetSizeCheck" />
    <Button
        android:id="@+id/profile_update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/dark_white"
        android:text="Update Profile"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <ProgressBar
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/progress_circular"/>
    <TextView
        android:id="@+id/profile_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    </LinearLayout>
    </ScrollView>