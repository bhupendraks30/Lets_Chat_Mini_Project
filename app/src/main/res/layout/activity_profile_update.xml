<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Update_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_primary"
        android:padding="10dp"
        android:id="@+id/search_toolbar"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Picture Update"
            android:textSize="22sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp">
        <ImageButton
            android:id="@+id/imageView_profile_update"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/cercle"
            android:backgroundTint="@color/gray"
            android:src="@drawable/username_icon"
            android:scaleType="centerCrop"
            android:layout_marginBottom="40dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/update_button_profile_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/dark_white"
            android:text="Update Profile Image"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/progress_update_image"/>
    </LinearLayout>

</RelativeLayout>